<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_tiwen"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:ntb_active_color="#fff"

        app:ntb_animation_duration="400"
        app:ntb_bg_color="#fff"
        app:ntb_corners_radius="10dp"
        app:ntb_icon_size_fraction="0"
        app:ntb_inactive_color="#ffff0000"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_title_size="35sp"
        app:ntb_titled="true"
        app:ntb_typeface="fonts/custom_typeface.ttf" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_tiwen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>